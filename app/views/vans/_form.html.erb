<%= form_for([@train, @van.becomes(Van)]) do |f| %>
  <%= render 'common/errors', resource: @van %>
  <p>Coupe: bottom_seats&top_seats </p>
  <p>Plac: bottom_seats&top_seats side_top_seats&side_bottom_seats</p>
  <p>Sv: bottom_seats </p>
  <p>Seat: econom_seats </p>

  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :type, Van::TYPES, selected: @van.type %>
  </div>

  <div class="field">
    <%= f.label :top_seats %><br>
    <%= f.number_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :bottom_seats %><br>
    <%= f.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats  %><br>
    <%= f.number_field :side_top_seats  %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats  %><br>
    <%= f.number_field :side_bottom_seats  %>
  </div>

  <div class="field">
    <%= f.label :econom_seats  %><br>
    <%= f.number_field :econom_seats  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>