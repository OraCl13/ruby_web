<%= form_with(model: [:admin, railway_station]) do |form| %>
  <%= render 'common/errors', resource: railway_station %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.submit t('railway_stations.form.submit', action: @railway_station ? 'Створити' : 'Редагувати') %>
  </div>
<% end %>
