<h1>Form for buy ticket</h1>

<%= form_for [@train, @ticket] do |f| %>
  <h3>From <%= @start_station.title%></h3>
  <h3>To <%= @end_station.title%></h3>

  <div class="field">
    <%= f.label :base_station %><br>
    <%= f.select :base_station_id, options_for_select({@start_station.title => @start_station.id}, @start_station.id), {}%>
  </div>

  <div class="field">
    <%= f.label :end_station %><br>
    <%= f.select :end_station_id, options_for_select({@end_station.title => @end_station.id}, @end_station.id), {}%>
  </div>

  <div class="field">
    <%= f.label :user_first_name %><br>
    <%= f.text_field :user_first_name %>
  </div>

  <div class="field">
    <%= f.label :user_last_name %><br>
    <%= f.text_field :user_last_name %>
  </div>

  <div class="field">
    <%= f.label :user_middle_name %><br>
    <%= f.text_field :user_middle_name %>
  </div>

  <div class="field">
    <%= f.label :user_passport %><br>
    <%= f.text_field :user_passport %>
  </div>

  <div class="field">
    <%= f.submit 'Create Ticket' %><br>
  </div>

<% end %>